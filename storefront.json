{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "@ecomplus/storefront-"
      ],
      "schedule": [
        "after 8am and before 4pm every weekday"
      ],
      "semanticCommitType": "fix",
      "automerge": true
    },
    {
      "excludePackagePrefixes": [
        "@ecomplus/storefront-"
      ],
      "schedule": [
        "before 7am on monday"
      ],
      "semanticCommitType": "chore",
      "addLabels": [
        "automerge"
      ]
    }
  ]
}
