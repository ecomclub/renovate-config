{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "before 7am on monday"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "packageRules": [
    {
      "excludePackagePrefixes": [
        "@ecomplus/storefront-"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "labels": [
        "dependencies",
        "automerge"
      ],
      "groupName": "Many non-major"
    },
    {
      "matchPackagePrefixes": [
        "@ecomplus/storefront-"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "schedule": [
        "after 8am and before 4pm every weekday"
      ],
      "semanticCommitType": "fix",
      "automerge": true,
      "groupName": "Storefront non-major"
    }
  ]
}
