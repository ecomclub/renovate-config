{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "schedule": [
    "before 7am on monday"
  ],
  "labels": [
    "dependencies",
    "automerge"
  ],
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "semanticCommitType": "chore",
  "packageRules": [
    {
      "matchPackagePrefixes": [
        "@ecomplus/storefront-"
      ],
      "schedule": [
        "after 8am and before 4pm every weekday"
      ],
      "labels": [
        "dependencies"
      ],
      "semanticCommitType": "fix",
      "automerge": true
    }
  ]
}
