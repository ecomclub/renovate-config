{
  "extends": [
    "config:base"
  ],
  "schedule": [
    "after 7am on the first day of the month"
  ],
  "labels": [
    "dependencies"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "lockFileMaintenance"
      ],
      "labels": [
        "dependencies",
        "automerge"
      ],
      "automerge": true,
      "requiredStatusChecks": null,
      "groupName": "all non-major"
    }
  ]
}
